<%= form_with url: search_subsidiaries_path, method: :get, local: true do |f| %>
  <%= f.label :q, 'Busca de filiais' %>
  <%= f.text_field :q %>
  <%= f.submit 'Buscar' %>
<% end %>

<%if @subsidiaries.empty?%>
  <h2>Nenhuma filial encontrada</h2>
<%else%>
  <% @subsidiaries.each do |subsidiary| %>
    <div>
      <h2><%= subsidiary.name %></h2>
      <li><%= subsidiary.address %></li>
      <li><%= subsidiary.neighborhood %></li>
    </div>
  <% end %>
<% end %>
