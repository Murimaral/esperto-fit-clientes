<dl>
  <dt><%= t('.client.cpf') %></dt>
  <dd><%= @enroll.client.cpf %></dd>
  <dt><%= t('.client.email') %></dt>
  <dd><%= @enroll.client.email %></dd>
  <dt><%= t('.plan.name') %></dt>
  <dd><%= @enroll.plan.name %></dd>
  <dt><%= t('.payment_option.name')%></dt>
  <dd><%= @enroll.payment_option.name %></dd>
  <dt><%= t('.plan.permanency')%></dt>
  <dd><%= "#{@enroll.plan.permanency} meses" %></dd>
  <dt><%= t('.plan.monthly_payment')%></dt>
  <dd><%= number_to_currency @enroll.plan.monthly_payment %></dd>
</dl>

<% if @enroll.coupon.present? %>
  Promoção: <%= @enroll.coupon_promotion_name%>
  Você recebeu um desconto de: <%= @enroll.coupon_discount_rate %>
  Valor a pagar: <%= @enroll.total_value_with_coupon %>
  até: <%= @enroll.coupon_expiration_date %>
<% end %>

<%= link_to t('.confirm'), enrolls_path(enroll: @enroll.attributes), method: :post %>

<%= link_to t('.back'), new_subsidiary_enroll_path(@enroll.subsidiary_id) %>
