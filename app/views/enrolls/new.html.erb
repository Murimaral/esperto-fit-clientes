<div class="container">
  <ul>
    <% @enroll.errors.full_messages.each do |message| %>
      <li> <%= message %> </li>
    <% end %>
  </ul>

  <%= form_with model: @enroll, url: subsidiary_enrolls_confirm_path(@subsidiary.id), local:true do |f| %>
    <div class="form-group">
      <%= f.label :plan_id %>
      <%= f.collection_select(:plan_id, @subsidiary.plans, :id, :description, { prompt: 'Selecione o plano' }, class: 'form-control') %>
    </div>
    <div class="form-group">
      <%= f.label :payment_option_id %>
      <%= f.collection_select(:payment_option_id, @payment_options, :id, :name, { prompt: 'Selecione a forma de pagamento' }, class: 'form-control') %>
    </div>
    <%= f.submit t('.submit') %>
  <% end %>
</div>
