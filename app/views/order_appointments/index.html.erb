<div class="container mt-5">
  <% @appointments.each do |appointment| %>
    <div class="row my-3">
      <%= l appointment.appointment_date %>
      <%= l appointment.appointment_time, format: :short %> -
      <%= appointment.personal.name %> -
      <%= link_to 'Mais informações', order_appointment_path(appointment), class: 'mx-2' %>
      <%= link_to 'Agendar este horário', appointment_order_appointments_path(appointment), method: :post, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
